<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2">Devices Edit</h1>
  
</div>
<div class="card shadow mb-4 mt-4">
  <!-- Card Header - Dropdown -->
  <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
      <h6 class="m-0 font-weight-bold text-primary">Your Devices</h6>
  </div>
  <!-- Card Body -->
  <div class="card-body overflow-auto" >
    <%= form_with(model: @device) do |form| %>
      <% if @device.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@device.errors.count, "error") %> prohibited this device from being saved:</h2>

          <ul>
            <% @device.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field mb-3">
        <%= form.label :code %>
        <%= form.text_field :code,read_only: true,class: "form-control form-control" %>
      </div>

      <%= form.fields_for :device_info do |info| %>
        <div class="field mb-3">
          <%= info.label :name %>
          <%= info.text_field :name,read_only: true,class: "form-control form-control" %>
        </div>
        <div class="field mb-3">
          <%= info.label :mode_name %>
          <%= info.text_field :mode_name,read_only: true,class: "form-control form-control" %>
        </div>

        <div class="field mb-3">
          <%= info.label :mfg_date %>
          <%= info.date_field :mfg_date,read_only: true,class: "form-control form-control" %>
        </div>
        <div class="mt-3">
          <div class="mb-3 row flex-row justify-content-between text-left">
            <div class="form-group col-sm-6 flex-column d-flex"> 
              <label class="form-control-label">
                Temperature min threshold
              </label> 
              <%= info.text_field :min_temperature,class: "form-control form-control" %>
            </div>

            <div class="form-group col-sm-6 flex-column d-flex"> 
              <label class="form-control-label">
                Temperature Max threshold
              </label> 
              <%= info.text_field :max_temperature,read_only: true,class: "form-control form-control" %>
            </div>
          </div>
          <div class="mb-3 row flex-row justify-content-between text-left">
            <div class="form-group col-sm-6 flex-column d-flex"> 
              <label class="form-control-label">
                Weight min threshold
              </label> 
              <%= info.text_field :min_weight,class: "form-control form-control" %>
            </div>

            <div class="form-group col-sm-6 flex-column d-flex"> 
              <label class="form-control-label">
                Weight max threshold
              </label> 
              <%= info.text_field :max_weight,read_only: true,class: "form-control form-control" %>
            </div>
          </div>
        </div>
      <%end%>

      <div class="actions">
        <%= form.submit 'Save device info', class: "btn btn-success mt-2 col-md-3 " %>
      </div>
    <% end %>
  </div>
</div>
